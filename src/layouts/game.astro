---
import Root from "./root.astro"

type Props = {
  title?: string
  description?: string
}
const { title, description } = Astro.props
---

<Root title={title} description={description}>
  <main class="flex-grow w-full p-3 overflow-hidden">
    <slot />
  </main>
  <style>
    html,
    body {
      @apply h-full max-h-full;
    }
  </style>
</Root>
